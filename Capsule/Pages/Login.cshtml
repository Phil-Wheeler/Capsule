@page
@model Capsule.Pages.LoginModel
@{
    ViewData["Title"] = "Log in";
}
<h2>Login</h2>
<AuthorizeView>
    <Authorizing>
        <p>Determining session state, please wait...</p>
    </Authorizing>
    <NotAuthorized>
        <h1>Sorry</h1>
        <p>You're not authorized to reach this page. You need to log in.</p>
    </NotAuthorized>
</AuthorizeView>